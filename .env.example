# LinkedIn Easy Apply Bot - Environment Variables Example
# Copy this file to .env and fill in your actual values

# Base de datos PostgreSQL
DATABASE_URL="postgresql://{DB_USER}:{DB_PASSWORD}@localhost:5432/linkedin_bot?schema=public"

# Configuración de PostgreSQL (alternativa)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=linkedin_bot
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Configuración del proyecto
NODE_ENV=development

# LinkedIn Credentials (Optional - can also be set in config.ts)
LINKEDIN_EMAIL=your-email@example.com
LINKEDIN_PASSWORD=your-password

# OpenAI API Key (for AI form filling features)
OPENAI_API_KEY=your-openai-api-key-here

# Bot Configuration
MAX_APPLICATIONS_PER_RUN=50
DELAY_BETWEEN_APPLICATIONS=3000
ENABLE_AI_FORM_FILLING=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_CONSOLE_LOGS=true
ENABLE_FILE_LOGS=false

# Browser Configuration
HEADLESS_MODE=false
BROWSER_TIMEOUT=60000

# Limit of applications to send on a run
LIMIT= 10

